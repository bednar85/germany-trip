.filter-bar__group
    cf()
    margin: 0 auto
    // overflow: hidden
    
    &.-inline
        .filter-bar__label
            float: left
    
    &.-main-group
        .filter-bar__input:checked + span
            // display: inline-block
            border-bottom: 2px solid $gold
            float: left
            padding-bottom: 6px
            
            &:before
                display: none

.filter-bar__label,
.filter-bar__input
    margin: 0

.filter-bar__label
    cursor: pointer
    display: block
    // float: left
    font-family: 'Montserrat'
    font-size: 14px
    font-weight: $bold
    line-height: 1
    margin-right: 20px
    // overflow: hidden
    position: relative
    text-transform: uppercase

.filter-bar__input
    display: none
    // left: -50px
    // position: absolute
    
.filter-bar__input:checked + span
    display: block
    position: relative
    
    &:before
        background-color: $lime
        content: ""
        border-radius: 10px
        display: block
        height: 20px
        left: -30px
        position: absolute
        top: -3px
        width: 20px