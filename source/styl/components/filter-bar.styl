.filter-bar__label,
.filter-bar__input
    margin: 0

.filter-bar__label
    cursor: pointer
    display: block
    // float: left
    font-family: 'Montserrat'
    font-size: 14px
    font-weight: $bold
    line-height: 1
    margin: 15px 20px 15px 0
    // margin-right: 20px
    // overflow: hidden
    position: relative
    text-transform: uppercase

.filter-bar__input
    display: none
    // left: -50px
    // position: absolute
    
.filter-bar__input:checked + span
    display: block
    position: relative
    
    &:before
        background-color: $lime
        content: ""
        border-radius: 100%
        display: block
        height: 10px
        left: -15px
        position: absolute
        top: 50%
        transform: translateY(-50%)
        width: 10px