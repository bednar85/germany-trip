@import "../../../node_modules/flickity/dist/flickity.min.css"

.city-selector
    background: #e5e5e5
    margin-bottom: 30px
    // box-shadow: inset 0 0 10px #999

.city-selector__option
    // height: 600px
    overflow: hidden
    // padding-top: 56.25%
    padding-top: 35%
    position: relative
    text-align: center
    width: 100%

.city-selector__option__content
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%

.city-selector__option__heading
    color: #fff
    font-family: 'Montserrat'
    // font-size: 5rem
    font-size: 80px
    font-weight: $bold
    margin-top: -2.5rem
    margin-bottom: 0
    position: relative
    text-shadow: 0 0 10px rgba(76, 76, 76, 0.5)
    top: 50%
    width: 100%
    z-index: 2
    
    .-berlin &
        color: $gold

    .-munich &
        color: $teal

    .-vienna &
        color: $lime
        
.city-selector__option__caption
    bottom: 20px
    color: #fff
    font-family: 'Montserrat'
    font-size: 18px
    left: 50%
    margin-top: 0
    margin-bottom: 0
    position: absolute
    text-shadow: 0 0 10px rgba(76, 76, 76, 0.5)
    transform: translateX(-50%)
    z-index: 2

.city-selector__option__background
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)
    width: 100%
    z-index: 1